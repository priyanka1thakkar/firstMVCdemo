@{
    ViewData["Title"] = "Get all books";
}
@model IEnumerable<firstMVCAppDemo.Models.BookModel>


@foreach (var item in Model)
{
    <div class="container">
        <h1 class="display-4">Get all books</h1>
        <div class="row">
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h3 class="card-title">@item.Title</h3>
                        <p class="card-text">@item.Description</p>
                        <div class="btn-group">
                            <a asp-controller="book" asp-action="getBook" asp-route-Id="@item.Id" class="btn btn-sm btn-outline-secondary">View details</a>
                        </div>
                        <small class="text-muted">@item.Author </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
